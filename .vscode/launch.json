{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Logging.API.Http",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/LoggingAPI.Http/bin/Debug/net8.0/Logging.API.Http.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LoggingAPI.Http",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
